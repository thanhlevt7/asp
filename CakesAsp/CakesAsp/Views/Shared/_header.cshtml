

<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="header__top__inner">
                        <div class="header__top__left">
                            <ul>
                              
                                @if (ViewBag.Username != null)
                                {
                                    <a  asp-controller="Home" asp-action="Logout">
                                        <h5 color: red>Đăng xuất </h5>
                                    </a>
 }
                                else
                                {
                            <a asp-controller="Home" asp-action="Login">
                             
                                <h5 color: red>Đăng nhập </h5>
                            </a>
}

                            </ul>
                        </div>
                        <div class="header__logo">
                            <a href="./index.html"><img src="~/asset/img/logo.png" alt=""></a>
                        </div>
                        <div class="header__top__right">
                            <div class="header__top__right__links">
                                <a href="#" class="search-switch"><img src="~/asset/img/icon/search.png" alt=""></a>
                                <a href="#"><img src="~/img/icon/heart.png" alt=""></a>
                            </div>
                            <div class="header__top__right__cart">  
                                <a asp-controller="Home" asp-action="Cart"><img src="~/asset/img/icon/cart.png" alt=""> <span>0</span></a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li class="active"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li><a asp-action="About" asp-controller="Home">About</a></li>
                        <li><a asp-action="Products" asp-controller="Home">Shop</a></li>
                    
                        <li><a asp-action="Blog" asp-controller="Home">Blog</a></li>
                        <li><a asp-action="Contact" asp-controller="Home">Contact</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- Header Section End -->
